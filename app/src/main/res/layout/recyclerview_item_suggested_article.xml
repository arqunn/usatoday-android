<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.arqunn.usatoday.domain.model.Article" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title"
            style="@style/UsaTodayText.Medium.18"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{item.title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Maecenas porttitor congue massa." />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_source"
            style="@style/UsaTodayText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@{item.source.name}"
            app:layout_constraintStart_toStartOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:text="Sputnik" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_time"
            style="@style/UsaTodayText.Regular.10"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:paddingTop="2dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_source"
            app:layout_constraintStart_toEndOf="@id/tv_source"
            app:layout_constraintTop_toTopOf="@id/tv_source"
            tools:text=" - 10 minutes" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>